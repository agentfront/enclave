{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/src",
  "projectType": "library",
  "tags": ["scope:publishable", "type:lib", "versioning:independent"],
  "implicitDependencies": ["ast"],
  "targets": {
    "build-worker-script": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/core/dist/src/adapters/worker-pool",
        "main": "libs/core/src/adapters/worker-pool/worker-script.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@enclave-vm/types", "@enclave-vm/ast", "acorn", "acorn-walk", "astring"]
        }
      }
    },
    "test-perf": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/core/jest.perf.config.ts",
        "runInBand": true
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build", "build-worker-script"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/core/dist",
        "main": "libs/core/src/index.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/core/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/core/README.md", "libs/core/SECURITY-AUDIT.md", "LICENSE", "libs/core/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@babel/standalone",
            "@enclave-vm/types",
            "@enclave-vm/ast",
            "acorn",
            "acorn-walk",
            "astring",
            "zod",
            "@huggingface/transformers",
            "vectoriadb"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/core/dist/esm",
        "main": "libs/core/src/index.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@babel/standalone",
            "@enclave-vm/types",
            "@enclave-vm/ast",
            "acorn",
            "acorn-walk",
            "astring",
            "zod",
            "@huggingface/transformers",
            "vectoriadb"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/core/dist/package.json"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/core/dist"
      }
    }
  }
}
