{
  "name": "enclavejs-runtime",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/enclavejs-runtime/src",
  "projectType": "library",
  "tags": ["scope:publishable", "type:lib", "versioning:independent"],
  "targets": {
    "build-tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/enclavejs-runtime/dist",
        "main": "libs/enclavejs-runtime/src/index.ts",
        "tsConfig": "libs/enclavejs-runtime/tsconfig.lib.json",
        "assets": [
          {
            "input": "libs/enclavejs-runtime",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "libs/enclavejs-runtime",
            "glob": "package.json",
            "output": "."
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/enclavejs-runtime/dist",
        "commands": ["node scripts/strip-dist-from-pkg.js libs/enclavejs-runtime/dist/package.json"]
      },
      "dependsOn": ["build-tsc"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/enclavejs-runtime/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  },
  "implicitDependencies": ["enclavejs-types", "enclavejs-stream", "enclave-vm"]
}
