{
  "name": "enclave-vm",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/enclave-vm/src",
  "projectType": "library",
  "tags": ["scope:publishable", "type:lib", "versioning:independent"],
  "implicitDependencies": ["ast-guard"],
  "targets": {
    "test-perf": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/enclave-vm/jest.perf.config.ts",
        "runInBand": true
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/enclave-vm/dist",
        "main": "libs/enclave-vm/src/index.ts",
        "tsConfig": "libs/enclave-vm/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/enclave-vm/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": [
          "libs/enclave-vm/README.md",
          "libs/enclave-vm/SECURITY-AUDIT.md",
          "LICENSE",
          "libs/enclave-vm/package.json"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": [
            "@babel/standalone",
            "@enclave-vm/types",
            "@enclave-vm/ast",
            "acorn",
            "acorn-walk",
            "astring",
            "zod",
            "@huggingface/transformers",
            "vectoriadb"
          ]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/enclave-vm/dist/esm",
        "main": "libs/enclave-vm/src/index.ts",
        "tsConfig": "libs/enclave-vm/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": [
            "@babel/standalone",
            "@enclave-vm/types",
            "@enclave-vm/ast",
            "acorn",
            "acorn-walk",
            "astring",
            "zod",
            "@huggingface/transformers",
            "vectoriadb"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/enclave-vm/dist/package.json"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/enclave-vm/dist"
      }
    }
  }
}
