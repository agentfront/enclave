{
  "name": "broker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/broker/src",
  "projectType": "library",
  "tags": ["scope:publishable", "type:lib", "versioning:independent"],
  "implicitDependencies": ["types", "stream", "core"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/broker/dist",
        "main": "libs/broker/src/index.ts",
        "tsConfig": "libs/broker/tsconfig.lib.json",
        "format": ["cjs"],
        "declaration": true,
        "declarationRootDir": "libs/broker/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/broker/README.md", "LICENSE", "libs/broker/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@enclave-vm/types", "@enclave-vm/stream", "@enclave-vm/core", "minimatch", "zod"]
        }
      }
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["build-cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/broker/dist/esm",
        "main": "libs/broker/src/index.ts",
        "tsConfig": "libs/broker/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": false,
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "esbuildOptions": {
          "outExtension": { ".js": ".mjs" },
          "external": ["@enclave-vm/types", "@enclave-vm/stream", "@enclave-vm/core", "minimatch", "zod"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "build-esm"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/broker/dist/package.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/broker"],
      "options": {
        "jestConfig": "libs/broker/jest.config.ts"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/broker/dist"
      }
    }
  }
}
